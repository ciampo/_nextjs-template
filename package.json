{
  "name": "nextjs-template",
  "version": "0.1.0",
  "main": "pages/index.js",
  "author": "Marco Ciampini",
  "repository": {
    "type": "git",
    "url": "https://github.com/ciampo/_nextjs-template.git"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true next build",
    "dev": "node server.js",
    "build": "next build",
    "test": "stylelint '**/*.css' && tsc --noEmit && eslint '*/**/*.{js,ts,tsx}'",
    "test:fix": "yarn test --fix",
    "export": "next export",
    "static": "rm -rf .next/ out/ && yarn build && yarn next export && node ./add-netlify-headers.js",
    "start": "NODE_ENV=production node server.js"
  },
  "browserslist": [
    "last 2 versions",
    "ie > 10",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then yarn install --frozen-lockfile; fi",
      "post-merge": "yarn install --frozen-lockfile",
      "post-rebase": "yarn install",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js|ts|tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint",
      "git add"
    ]
  },
  "dependencies": {
    "framer-motion": "^1.6.15",
    "next": "^9.1.2",
    "preact": "^10.0.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@next/bundle-analyzer": "^9.1.2",
    "@types/node": "^12.12.6",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "@zeit/next-css": "^1.0.1",
    "autoprefixer": "^9.7.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "husky": "^3.0.9",
    "lint-staged": "^10.0.0-1",
    "module-alias": "^2.2.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-reporter": "^6.0.1",
    "preact-render-to-string": "^5.1.1",
    "preact-ssr-prepass": "^1.0.0",
    "prettier": "^1.18.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "tailwindcss": "^1.1.3",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2"
  }
}
